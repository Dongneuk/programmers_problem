import numpy as np

def solution(progresses, speeds):
    
    daylst = np.ones(len(progresses), )
    n = 1
    
    for i in range(len(progresses)):
        while progresses[i] + speeds[i] * daylst[i] < 100:
            
            if progresses[i] + speeds[i] * daylst[i] < 100:
                 daylst[i] += 1
            else:
                continue
    
    daylst = list(daylst)
    
    s = daylst[0]
    cnt = 1
    answer =[]
    
    for i in range(1, len(daylst)):
        if s >= daylst[i]:
            cnt += 1
        else:
            answer.append(cnt)
            cnt = 1
            s = daylst[i]
    answer.append(cnt)
    return answer



# 걸린 시간을 새로운 리스트로 만듦.
# 데이리스트 안에서 제일 마지막 경우의 수는 간단히 for 밖에서 추가해주면 완료.
# daylst 후반부 경우의수에서 answer.append가 else에서 실행 안되기 때문에 for루프 밖에서 한번 더해줌.