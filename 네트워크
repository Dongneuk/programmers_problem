def solution(n, computers):
    
    def dfs(v):
        visited[v] = True
        
        # 방문한 컴퓨터 안의 네트워크들을 체크하기 위해 다시 dfs로 돌아야한다.
        for i in range(len(computers)):
            if i != v and computers[v][i] == 1:
                if not visited[i]:
                    dfs(i)
            
    visited = [False] * n
    
    # 네트워크 갯수 카운트
    cnt = 0
    for i in range(n):
        if not visited[i]:
            dfs(i)
            cnt += 1
            
    return cnt